@model Supermarket_Managment_System.Models.bills 
<!DOCTYPE html>
<html>
<head>
	<title>Bill</title>
	<style>
		.card {
			background-color: #fff;
			border-radius: 10px;
			box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.2);
			padding: 20px;
			margin: 0 auto;
			max-width: 500px;
		}

		table {
			margin-top: 20px;
			border-collapse: collapse;
			width: 100%;
		}

		th, td {
			padding: 8px;
			text-align: left;
			border-bottom: 1px solid #ddd;
		}

		th {
			background-color: #f2f2f2;
		}

		.total {
			font-weight: bold;
			margin-top: 10px;
			text-align: right;
		}
	</style>
</head>
<body>
	<div class="card">
		<h1>Bill</h1>
		<p>Cashier Name: John Doe</p>
		<table>
			<tr>
				<th></th>
				<th>Price</th>
			</tr>
			<tr>
				<td>Item 1</td>
				<td>$10.00</td>
			</tr>
			<tr>
				<td>Item 2</td>
				<td>$15.00</td>
			</tr>
			<tr>
				<td>Item 3</td>
				<td>$20.00</td>
			</tr>
		</table>
		<p class="total">Total Price: $45.00</p>
		<p>Payment Method: @Model.Payment.MethodName</p>
	</div>
</body>
</html>