@{
    ViewData["Title"] = "Supermarket Management";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .main-content {
            margin-left: 50px;
            padding: 2rem;
        }
        
        .embed-container {
            position: relative;
            padding-bottom: 30%;
            height: 0;
            overflow: hidden;
            max-width: 100%;
        }

        .embed-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        
        .btn-container {
            display: flex;
            justify-content: space-evenly;
            margin-top: 2rem;
        }
    </style>
</head>
<body>

    <div class="main-content">
        <div class="btn-container">
            <a class="btn btn-primary" href="https://localhost:7209/product/Index">View Products List</a>
            <a class="btn btn-primary" href="https://localhost:7209/categories/Index">View Categories List</a>
        </div>
<h1>Products prices</h1>
        <div class="embed-container">
            <iframe src="https://localhost:7209/show" frameborder="0" allowfullscreen></iframe>
        </div>
<h1>Sold products</h1>
        <div class="embed-container">
            <iframe src="https://localhost:7209/show2" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
