@model Supermarket_Managment_System.ViewModels.loginViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "User login";
}
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/img/Mart.jpg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-action="login" asp-controller="Auth" method="post">
                    <!-- username input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="Username">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check col-md-12">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="form1Example3" checked />
                            <label asp-for="RememberMe" class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                    </div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                </form>


            </div>
        </div>
    </div>
</section>